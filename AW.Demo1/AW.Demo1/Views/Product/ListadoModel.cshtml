@model IEnumerable<AW.Demo1.Models.Product>

<form>
    <label>Filtrar por Nombre</label>
    <input name="filterByName" />
    <button>Buscar</button>
</form>
<br />
<table class="table">
    <tr>
        <th>Codigo</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Stock</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
        </tr>
    }
</table>

